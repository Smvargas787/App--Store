{
    "env": {
        "node": true,
        "mocha": true
    },
    "extends": "airbnb",

    "rules": {
            "new-cap": 0,
            "prefer-template": 0,
            "global-require": 0,
            "no-unused-expressions": 0,
            "max-len": 0
        },
        "globals": {
            "describe": true,
            "it": true,
            "before": true,
            "beforeEach": true
        }
    }
